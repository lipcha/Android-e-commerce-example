<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/llButtonWrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/selector_green_button"
    android:padding="4dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btnMinusProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_minus"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"/>
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/etProductCount"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_edit_text"
        android:text="@string/default_add_to_cart_product_count"
        android:padding="4dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:inputType="number"
        android:maxLength="2"/>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/btnAddProductCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_plus"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/buttonAddToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_green_button"
            android:textColor="@color/yellow"
            android:text="@string/btn_name_add_to_cart" />

        <android.support.v4.widget.ContentLoadingProgressBar
            android:id="@+id/pbAddToCart"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>