<?xml version="1.0" encoding="utf-8"?>
<com.foxkiev.app.ui.custom_views.FixedAspectRatioFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:aspectRatioHeight="2"
    app:aspectRatioWidth="3">
    <android.support.v4.view.ViewPager
        android:id="@+id/imageViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <me.relex.circleindicator.CircleIndicator
        android:id="@+id/circlePagerIndicator"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:padding="16dp"
        app:ci_drawable="@drawable/ic_pager_indicator_selected"
        app:ci_drawable_unselected="@drawable/ic_pager_indicator_unselected"/>
</com.foxkiev.app.ui.custom_views.FixedAspectRatioFrameLayout>