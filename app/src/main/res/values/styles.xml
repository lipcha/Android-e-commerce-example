<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">#000</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="TextStyle" parent="android:Widget.TextView">


    </style>

    <style name="TextStyle.Title" parent="TextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextStyle.Title.Small" parent="TextStyle.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextStyle.SubTitle" parent="TextStyle">
        <item name="android:textColor">#1d2b00</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextStyle.SubTitle.Small" parent="TextStyle.SubTitle">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.Description" parent="TextStyle">
        <item name="android:textColor">#484848</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextStyle.Description.Small" parent="TextStyle.Description">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Button" parent="TextStyle">

    </style>

    <style name="MenuItem" parent="TextStyle.Title.Small">
        <item name="android:drawablePadding">@dimen/default_drawable_padding</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Button.Blue">
        <item name="android:background">@drawable/selector_blue_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Green">
        <item name="android:background">@drawable/selector_green_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.Yellow">
        <item name="android:background">@drawable/selector_yellow_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.GreenCorner" parent="Button">
        <item name="android:background">@drawable/selector_green_corner_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_height">26dp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#182400</item>
    </style>

    <style name="ProductBannerInfo">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NavigationTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavigationTab" parent="Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/NavigationTabTextAppearance</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>

        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">6dp</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabBackground">@drawable/selector_tabs</item>

    </style>

</resources>
